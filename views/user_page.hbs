<link rel="stylesheet" type="text/css" href="/stylesheets/style.css">

<h2>Employee Recognition Portal User Webpage</h2>


    <ul>
        <li><a href="login/user_page">User Profile</a>
            <ul>
                <li><a href="#">Update User</a></li>
            </ul>
        </li>
        <li><a href="#">Awards</a>
            <ul>
                <li><a href="awards/addaward">Add Awards</a></li>
                <li><a href="awards/searchAward">Search Awards</a></li>
            </ul>
        </li>
        <li><a href="/logout">Logout</a></li>
    </ul>

<h3>Welcome {{name}}!</h3>



<h4> My awards</h4>


    <table id = tables>

        <tr>
            <th>Award Type</th>
            <th>Awardee's Email</th>
            <th>Awardee's Department</th>
            <th>Awardee's Region</th>
            <th>Delete</th>
             
        </tr>
        {{#each elements}}
            <tr>
              
                <td>{{this.award_type}}</td>
                <td>{{this.awardee_email}}</td>
                <td>{{this.awardee_dept}}</td>
                <td>{{this.awardee_region}}</td>
                
                <td>
                <form action="/awards/deleteAward"> 
                <input type="submit" value="Delete" name={{this.awardee_email}} formmethod="post">
                </form>
                </td>
            </tr>
        {{/each}}
    </table>

    <br>

    <form action="" method="post">
        <div class = "Form_Layout">
            <input type="text" placeholder="User name" name="Update" required/>
            <input type="submit" value="Update">
        </div>
    </form>

    